<Window x:Class="SisanjeHrDesktopApp.SharedWindows.SharedCustom.LoadingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SisanjeHrDesktopApp.SharedWindows.SharedCustom"
        mc:Ignorable="d"
        Background="#121212"
        Foreground="White"
        Width="300" Height="150"  WindowStyle="None" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Border BorderBrush="White" BorderThickness="1">
        <Grid>
            <TextBlock Grid.Column="2" Grid.Row="2" Text="Loading" FontSize="40" Margin="0 20 0 70" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="LblLoading" />
            <ProgressBar Grid.Column="2" Grid.Row="2" Width="300" Height="10" IsIndeterminate="True" Margin="0 30 0 0"/>
        </Grid>
    </Border>
</Window>
